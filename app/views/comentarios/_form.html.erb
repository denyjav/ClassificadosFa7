<%= form_for [@anuncio, Comentario.new], remote: true do |f| %>
   <div class="field">
   	<%= f.label :nome %><br/>
   	<%= f.text_field :nome %>
   </div>

   <div class="field">
   	<%= f.label :corpo %><br />
   	<%= f.text_area :corpo%>
   </div>

   <div class="actions">
   		<%= f.submit "Enviar" %>
   </div>

<% end %>